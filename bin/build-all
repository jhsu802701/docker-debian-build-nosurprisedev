#!/bin/bash

set -eo pipefail

ABBREV="$1"
CODE_NAME="$2"
DISTRO="$3"
OWNER="$4"

TIME_STAMP_LOG=`date +%Y_%m%d_%H%M_%S`
DIR_LOG="log/$ABBREV/$CODE_NAME"
mkdir -p "$DIR_LOG"
LOG_FILE="$DIR_LOG/$TIME_STAMP_LOG.txt"
echo "Log file: $LOG_FILE"

mkdir -p log
bin/build-log "$ABBREV" "$CODE_NAME" "$DISTRO" "$OWNER" 2>&1 | tee "$LOG_FILE"

echo 'The build process is complete.'
echo "The full log file is at $LOG_FILE."
